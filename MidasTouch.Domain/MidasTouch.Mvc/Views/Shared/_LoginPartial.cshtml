@model MidasTouch.Domain.Models.User

<div class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("ConfirmUser", "User"))
                {
                    @Html.LabelFor(m => m.Identity.Email,"Enter Email")<br>
                    @Html.TextBoxFor(m => m.Identity.Email, new { @type = "email" })
                    <br>
                    @Html.LabelFor(m => m.Identity.Password, "Enter password")<br>
                    @Html.PasswordFor(m => m.Identity.Password)
                    <br>

                    <button type="submit">Submit</button>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


