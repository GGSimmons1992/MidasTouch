@model MidasTouch.Mvc.Models.HomePageMarketNews

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-light bg-warning rounded-bottom shadow pagelabel mb-3 " id="newstitle">
    Market News
</h1>

<div class="d-flex flex-wrap justify-content-center ml-4">

    @foreach (var news in Model.MarketNews)
    {

        <div class="card text-white bg-primary mb-3 mr-4" style="max-width: 25rem;">
            <div class="card-header">
                <a id="newsurl" href="@news.Url">@news.Headline</a>
            </div>
            <div class="card-body">
                <p class="card-title">@news.Summary</p>
            </div>
        </div>

    }

</div>

